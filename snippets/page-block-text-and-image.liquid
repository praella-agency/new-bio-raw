<div class="index-section" {% if block.settings.light_theme %}style="background: #fff;padding: 100px 0;color: #1c1d1d;border-left: 5vw solid;border-right: 5vw solid;"{% endif %}>
  <div class="page-width">
    {% capture image_layout %}
      <div class="feature-row__item">
        <div style="margin: 0 auto; max-width: {{ block.settings.image_width }}px;margin-{{ block.settings.layout }}: 0;">
          {% if block.settings.image != blank %}
            {% if block.settings.button_label != blank and block.settings.button_link != blank %}<a href="{{ block.settings.button_link }}">{% endif %}
            <div class="image-wrap" style="height: 0; padding-bottom: {{ 100 | divided_by: block.settings.image.aspect_ratio }}%;">
              {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
              <img class="feature-row__image lazyload"
                  data-src="{{ img_url }}"
                  data-widths="[180, 360, 540, 720, 900, 1080]"
                  data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                  data-sizes="auto"
                  alt="{{ block.settings.image.alt }}">
            </div>
            {% if block.settings.button_label != blank and block.settings.button_link != blank %}</a>{% endif %}
          {% else %}
            <div class="image-wrap">
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {% endif %}
        </div>
      </div>
    {% endcapture %}

    <div class="feature-row" data-aos style="align-items: flex-start;">
      {% if block.settings.layout == 'left' %}
        {{ image_layout }}
      {% endif %}

      <div class="feature-row__item feature-row__text feature-row__text--{{ block.settings.layout }}" style="padding-top:unset;">
        {% if block.settings.subtitle != blank %}
          <p class="subtitle">{{ block.settings.subtitle }}</p>
        {% endif %}
        {% if block.settings.title != blank %}
          <h2 class="h3 {% if block.settings.title_line %}meal_title{% endif %}">{{ block.settings.title | escape }}</h2>
        {% endif %}
        {% if block.settings.text != blank %}
          <div class="featured-row__subtext {% if block.settings.large_text %}larger-text{% endif %}">{{ block.settings.text }}</div>
        {% endif %}
        
        {% if block.settings.calories != blank or block.settings.fibre != blank or  block.settings.protein != blank %}
          <div class="grid">
        {% endif %}
        {% if block.settings.calories != blank %}
          <div class="grid__item one-third">
            <h2 class="h3">{{ block.settings.calories }}</h2>
            <div class="rte featured-row__subtext">calories per serving</div>
          </div>
        {% endif %}
        {% if block.settings.fibre != blank %}
          <div class="grid__item one-third">
            <h2 class="h3">{{ block.settings.fibre }}</h2>
            <div class="rte featured-row__subtext">fibre per serving</div>
          </div>
        {% endif %}
        {% if block.settings.protein != blank %}
          <div class="grid__item one-third">
            <h2 class="h3">{{ block.settings.protein }}</h2>
            <div class="rte featured-row__subtext">protein per serving</div>
          </div>
        {% endif %}
        {% if block.settings.calories != blank or block.settings.fibre != blank or  block.settings.protein != blank %}
        </div>
        {% endif %}
          
        {% if block.settings.button_label != blank %}
          <a href="{{ block.settings.button_link }}" class="btn{% if block.settings.full_button %} btn--full{% endif %}">
            {{ block.settings.button_label }}
          </a>
        {% endif %}
      </div>

      {% if block.settings.layout == 'right' %}
        {{ image_layout }}
      {% endif %}
    </div>
  </div>
</div>
